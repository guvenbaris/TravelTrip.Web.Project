@model TravelTripProject.Models.Entities.Blog
@{
    ViewBag.Title = "BlogGet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("BlogUpdate", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x=>x.Id)
    @Html.TextBoxFor(x=>x.Id,new{@class = "form-control",@readonly="readonly"})
    <br />
    @Html.LabelFor(x=>x.Header)
    @Html.TextBoxFor(x=>x.Header,new{@class = "form-control"})
    <br />
    @Html.LabelFor(x=>x.BlogDate)
    @Html.TextBoxFor(x=>x.BlogDate,new {@class ="form-control"})
    <br />
    @Html.LabelFor(x=>x.BlogImage)
    @Html.TextBoxFor(x=>x.BlogImage,new {@class ="form-control"})
    <br />
    @Html.LabelFor(x=>x.Description)
    @Html.TextAreaFor(x=>x.Description,15,1, new {@class ="form-control" ,style="resize:none"})
    <br />
    <button class="btn btn-success">Blog Güncelle</button>
}
