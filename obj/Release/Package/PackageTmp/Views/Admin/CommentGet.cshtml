@model TravelTripProject.Models.Entities.Comment

@{
    ViewBag.Title = "CommentGet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Güncelleme Sayfası</h2>
<br />
 @using (Html.BeginForm("CommentUpdate", "Admin", FormMethod.Post))
 {
     @Html.LabelFor(x => x.Id)
     @Html.TextBoxFor(x => x.Id, new {@class = "form-control"})
     <br/>
     @Html.LabelFor(x => x.UserName)
     @Html.TextBoxFor(x => x.UserName, new {@class = "form-control"})
     <br/>
     @Html.LabelFor(x => x.Mail)
     @Html.TextBoxFor(x => x.Mail, new {@class = "form-control"})
     <br/>
     @Html.LabelFor(x => x.CommentDescription)
     @Html.TextAreaFor(x => x.CommentDescription, 15, 1, new {@class = "form-control", style = "resize:none"})
     <br/>
     <button class="btn btn-success">Yorum Güncelle</button>
 }

