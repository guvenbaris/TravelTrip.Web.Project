
@model List<TravelTripProject.Models.Entities.Comment>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class ="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
@foreach (var x in Model)
{
    <tr>
        <td>@x.Id</td>
        <td>@x.UserName</td>
        <td>@x.Mail</td>
        <td>@x.CommentDescription</td>
        <td>@x.Blog.Header</td>
        <td><a href="/Admin/CommentDelete/@x.Id" class="btn btn-danger">Sil</a></td>
        <td><a href="/Admin/CommentGet/@x.Id" class="btn btn-warning">Güncelle</a></td>

     
      
    </tr>
}
</table>